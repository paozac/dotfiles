alias ls="ls -G -hF"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias ll="ls -Al"
alias la="ls -a"
alias sl=ls

alias cd..="cd .."
alias c="cd .."

alias grep="grep --color=auto"
alias tlf="tail -f"

alias b="bundle"
alias be="bundle exec"

alias cuc="bundle exec cucumber --require features"
alias cuf="cucumber -f fuubar"

alias memflush="echo 'flush_all' | nc localhost 11211"
alias ttt="touch tmp/restart.txt"

alias g="git"
alias gl="git pull --prune"
alias gs="git status"

alias psql="psql --pset pager=off"
alias prettyjson="python -mjson.tool"

alias f="foreman start"
alias rr="bundle exec rake routes | grep"
alias rc="bundle exec rails console"
alias berc="bundle exec rails console"
alias bers="bundle exec rails server"
alias berm="bundle exec rails db:migrate"
alias bertp="bundle exec rails db:test:prepare"
#alias yolo='git commit -am "DEAL WITH IT" && git push -f origin master'

alias features="bundle exec rspec --tag js"
alias efeatures="SKIP_EMBER=true bundle exec rspec --tag js"
alias ehfeatures="SKIP_EMBER=true HEADLESS=false bundle exec rspec --tag js"
alias hfeatures="HEADLESS=false bundle exec rspec --tag js"
