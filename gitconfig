[alias]
  st = status -sb
  sta = stash
  ci = commit
  co = checkout
  com = checkout master
  br = branch
  rh = reset --hard
  cp = cherry-pick
  re = rebase
  rem = rebase master
  riom = rebase -i origin/master
  reom = rebase origin/master
  me = merge
  ri = rebase -i
  pl = pull
  ps = push
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  # h = !git --no-pager log --graph  --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\"
  h = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  hh = !git h -20
  fe = fetch
  wc = whatchanged
  wd = diff --word-diff
  ours   = "!f() { git checkout --ours $@ && git add $@; }; f"
  theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
